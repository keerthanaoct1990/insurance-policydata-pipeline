{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "aviva-etl-datafactory"
		},
		"SQL_DB_LinkedService_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SQL_DB_LinkedService'"
		},
		"ADLs_Linkedservice_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ADLs_Linkedservice'"
		},
		"SQL_DB_LinkedService_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "aviva-policy-sql-sever.database.windows.net"
		},
		"SQL_DB_LinkedService_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "aviva-policy-db"
		},
		"SQL_DB_LinkedService_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "avivaadmin"
		},
		"ADLs_Linkedservice_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://avivainsurancestorage.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "aviva-etl-datafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"SQL_DB_LinkedService_password": {
						"value": "[parameters('SQL_DB_LinkedService_password')]"
					},
					"ADLs_Linkedservice_accountKey": {
						"value": "[parameters('ADLs_Linkedservice_accountKey')]"
					},
					"SQL_DB_LinkedService_properties_typeProperties_server": {
						"value": "[parameters('SQL_DB_LinkedService_properties_typeProperties_server')]"
					},
					"SQL_DB_LinkedService_properties_typeProperties_database": {
						"value": "[parameters('SQL_DB_LinkedService_properties_typeProperties_database')]"
					},
					"SQL_DB_LinkedService_properties_typeProperties_userName": {
						"value": "[parameters('SQL_DB_LinkedService_properties_typeProperties_userName')]"
					},
					"ADLs_Linkedservice_properties_typeProperties_url": {
						"value": "[parameters('ADLs_Linkedservice_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}